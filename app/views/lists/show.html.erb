<h2><%= @list.name %></h2>
  <% @list.movies.each do |movie| %>
  <%= movie.title %>
    <% movie.bookmarks.each do |bookmark| %>
      <%= bookmark.comment %>
      <%= link_to "Delete",
        bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    <% end %>
  <% end %>
